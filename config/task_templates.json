{
  "version": "1.0",
  "templates": [
    {
      "id": "flight_price_tracker",
      "name": "航班价格追踪",
      "category": "price_monitoring",
      "keywords": ["航班", "机票", "flight", "票价", "飞", "航空"],
      "regex_patterns": ["(从|自).+(到|飞).+", "(新加坡|成都|北京|上海).+(航班|机票)", "flight.+from.+to"],
      "task_type": "realtime",
      "default_cron": "*/10 * * * *",
      "default_task_text": "搜索最新航班价格信息并汇报变动",
      "auto_stop_hours": 2,
      "min_hits": 2,
      "window_hours": 4,
      "clarification_prompt": "请告诉我你想追踪哪条航线？\n例如：北京→新加坡"
    },
    {
      "id": "daily_news_digest",
      "name": "每日新闻摘要",
      "category": "news_information",
      "keywords": ["新闻", "头条", "news", "今天发生", "时事", "资讯", "摘要"],
      "regex_patterns": ["今天.*新闻", "有什么.*头条", "latest.*news"],
      "task_type": "periodic",
      "default_cron": "0 7 * * *",
      "default_task_text": "搜索今日重要新闻，生成简要中文摘要",
      "auto_stop_hours": 0,
      "min_hits": 2,
      "window_hours": 72,
      "clarification_prompt": "请告诉我你关注哪类新闻？\n例如：科技、财经、国际"
    },
    {
      "id": "weather_forecast",
      "name": "天气预报",
      "category": "life_services",
      "keywords": ["天气", "weather", "温度", "下雨", "气温", "预报"],
      "regex_patterns": [".+天气", "weather.*in", "会下雨吗", "温度.*多少"],
      "task_type": "periodic",
      "default_cron": "0 6,20 * * *",
      "default_task_text": "查询当地天气预报，包括温度、降水概率和穿衣建议",
      "auto_stop_hours": 0,
      "min_hits": 2,
      "window_hours": 72,
      "clarification_prompt": "请告诉我你想查询哪个城市的天气？"
    },
    {
      "id": "stock_price_alert",
      "name": "股票价格预警",
      "category": "price_monitoring",
      "keywords": ["股票", "股价", "stock", "ticker", "涨跌", "行情", "大盘"],
      "regex_patterns": ["(涨|跌).+[0-9]+", "stock.*price"],
      "task_type": "realtime",
      "default_cron": "*/5 9-16 * * 1-5",
      "default_task_text": "查询关注的股票最新价格和涨跌幅",
      "auto_stop_hours": 2,
      "min_hits": 2,
      "window_hours": 4,
      "clarification_prompt": "请告诉我你想监控哪些股票？\n例如：TSLA, AAPL"
    },
    {
      "id": "crypto_tracker",
      "name": "加密货币追踪",
      "category": "price_monitoring",
      "keywords": ["比特币", "crypto", "BTC", "ETH", "以太坊", "币价"],
      "regex_patterns": ["(BTC|ETH|USDT).*(价格|行情)", "crypto.*price", "比特币.*多少"],
      "task_type": "realtime",
      "default_cron": "*/3 * * * *",
      "default_task_text": "查询BTC、ETH等主要加密货币最新价格",
      "auto_stop_hours": 2,
      "min_hits": 2,
      "window_hours": 4,
      "clarification_prompt": "请告诉我你想追踪哪些币种？\n例如：BTC, ETH"
    },
    {
      "id": "system_health_check",
      "name": "系统健康检查",
      "category": "system_operations",
      "keywords": ["系统", "状态", "health", "status", "监控"],
      "regex_patterns": ["系统.*状态", "health.*check", "运行.*正常"],
      "task_type": "periodic",
      "default_cron": "*/30 * * * *",
      "default_task_text": "检查系统CPU、内存、磁盘使用率，报告异常",
      "auto_stop_hours": 0,
      "min_hits": 3,
      "min_keyword_hits": 2,
      "window_hours": 72,
      "clarification_prompt": "请告诉我需要检查哪些系统指标？"
    },
    {
      "id": "academic_paper_alert",
      "name": "学术论文监控",
      "category": "research_discovery",
      "keywords": ["论文", "paper", "research", "arxiv", "研究", "学术"],
      "regex_patterns": ["最新.*研究", "academic.*paper", "arxiv.*"],
      "task_type": "periodic",
      "default_cron": "0 8 * * *",
      "default_task_text": "搜索关注领域的最新学术论文并生成摘要",
      "auto_stop_hours": 0,
      "min_hits": 2,
      "window_hours": 168,
      "clarification_prompt": "请告诉我你想监控哪个研究领域？\n例如：AI、机器人、量子计算"
    },
    {
      "id": "meeting_summary",
      "name": "会议纪要生成",
      "category": "communication",
      "keywords": ["会议", "meeting", "纪要", "总结", "记录"],
      "regex_patterns": ["会议.*总结", "meeting.*notes", "整理.*纪要"],
      "task_type": "on_demand",
      "default_cron": "",
      "default_task_text": "整理最近的会议内容，生成结构化纪要",
      "auto_stop_hours": 0,
      "min_hits": 3,
      "window_hours": 168,
      "clarification_prompt": "请告诉我需要整理哪次会议的内容？"
    }
  ]
}
