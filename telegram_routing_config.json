{
  "conversation_window_minutes": 10,
  "max_context_messages": 5,
  "routing_rules": [
    {
      "name": "reply_context_router",
      "priority": 100,
      "conditions": {
        "has_reply": true
      }
    },
    {
      "name": "continuation_router",
      "priority": 90,
      "conditions": {
        "is_continuation": true
      }
    },
    {
      "name": "chinese_query_router",
      "priority": 80,
      "conditions": {
        "language": "chinese",
        "intent": "query"
      }
    },
    {
      "name": "action_router",
      "priority": 70,
      "conditions": {
        "intent": "action"
      }
    },
    {
      "name": "default_router",
      "priority": 1,
      "conditions": {}
    }
  ]
}